    <script>
        function adjustCarouselHeight() {
            var navHeight = document.getElementById('mainNav').offsetHeight;
            var footerHeight = document.getElementById('mainFooter').offsetHeight;
            var carousel = document.querySelector('#carouselSection');

            // Set the height of carousel and its inner items
            var carouselHeight = window.innerHeight - navHeight - footerHeight;
            carousel.style.height = carouselHeight + 'px';
            var carouselInner = document.querySelector('.carousel-inner');
            carouselInner.style.height = '100%';
            carouselInner.style.alignContent = 'center';
            // Select all elements with the class 'carousel-item'
            var carouselItems = document.querySelectorAll('.carousel-item');

            // Iterate over each selected element
            carouselItems.forEach(item => {
                // Apply styles to each element
                item.style.maxWidth = '80%';
                item.style.margin = 'auto';
                item.style.height = '100%';
                item.style.alignContent = 'center';
            });

        }
        window.addEventListener('load', adjustCarouselHeight);
        window.addEventListener('resize', adjustCarouselHeight);
    </script>

    <style>
